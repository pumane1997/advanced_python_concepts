<CameraScreen>: 
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            resolution: (640, 480)
            play: False
            id: cam
            size_hint_y: 0.8
            index: 0
            opacity: 0
        Button:
            id: camera_button
            text: 'Start'
            size_hint_y: 0.1
            on_press: root.start() if root.ids.cam.play == False else root.stop()
            background_normal: 'images/normal.png' # this will be normal color of button
            background_down: 'images/down.png' # this will be color of button when pressed
        Button:
            text: 'Capture'
            size_hint_y: 0.1
            on_press: root.capture()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'

<ImageScreen>: 
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            source: 'files/captured_image.png'
            id: img
            size_hint_y: 0.7
        Button:
            id: camera_button
            text: 'Create link'
            size_hint_y: 0.1
            on_press: root.create_link()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
        Label:
            id: link
            text: ''
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            padding: 10
            spacing: 10
            size_hint_y: 0.1
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png' 
            Button:
                text: 'Open Link'
                on_press: root.open_link()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'


<RootWidget>:
    canvas.before:
        Color:
            rgba: (0.3, 0.2, 0.1, 1)
        Rectangle:
            pos: self.pos # self.pos points at position of (self) root widget
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'
