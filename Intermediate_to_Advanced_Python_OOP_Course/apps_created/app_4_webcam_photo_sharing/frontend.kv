<CameraScreen>: 
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            resolution: (640, 480)
            play: False
            id: cam
            size_hint_y: 0.8
            index: 0
        Button:
            id: camera_button
            text: 'Start'
            size_hint_y: 0.1
            on_press: root.start() if root.ids.cam.play == False else root.stop()
        Button:
            text: 'Capture'
            size_hint_y: 0.1
            on_press: root.capture()

<ImageScreen>: 
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            source: 'files/captured_image.png'
            id: img
            size_hint_y: 0.6
        Button:
            id: camera_button
            text: 'Create link'
            size_hint_y: 0.1
            on_press: root.create_link() 
        Label:
            id: link
            text: ''
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            padding: 10
            spacing: 10
            Button:
                text: 'Copy Link'
                size_hint_y: 0.1
                on_press: root.copy_link() 
            Button:
                text: 'Open Link'
                size_hint_y: 0.1
                on_press: root.open_link()


<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'
